import cx_Oracle

def make_Connection() :#
    try:
        conn = cx_Oracle.connect('sparkmaya/sparkmaya@127.0.0.1/XE')
        valid_connection(conn)
        conn.close()
    except:
        printf( "Failed to connect to SparkMaya Master Database")
    
def valid_connection(conn):
    cur = conn.cursor()
    
    # Fetch entries
    connection = cur.execute('select * from connection_detail where valid_connection=0')
    
    # Sample Entry : (1, 1, '127.0.0.1', 1521, 'SPARKMAYA', 'sparkmaya', 'SPARKMAYA', 'XE_Connection_Local', '0')
    
    print("Connection Valid..")
    for result in cur:
        print "Updating %s wth valid_conection=1" %(result[7])
        cur.execute("update connection_detail set valid_connection=1 where id=%s" %(result[0]))
        print result
    
    con.commit()
    cur.close()
    




if __name__ == '__main__':
    make_Connection()